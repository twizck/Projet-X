<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ProjetX"
             x:Class="ProjetX.MainPage">

    <StackLayout>
        <Image Source="http://jeuxdepiste.com/logo%20jeux%20de%20piste.jpg" HorizontalOptions="Center" />
        <Label Text="Mode : FACILE" HorizontalOptions="Center" TextColor="Green" />
        <Button  Text="Aller au Parcour 1" Clicked="Parc1_clicked" BackgroundColor="LightGray" TextColor="Green" />
        <Button Text="Aller au Parcour 2" Clicked="Parc2_clicked" BackgroundColor="LightGray" TextColor="Green" />
        <Label Text="Mode : MEDIUM" HorizontalOptions="Center" TextColor="Orange" />
        <Button Text="Aller au Parcour 1" Clicked="Parc1_clicked" BackgroundColor="LightGray" TextColor="Orange" />
        <Button Text="Aller au Parcour 2" Clicked="Parc1_clicked" BackgroundColor="LightGray" TextColor="Orange" />
        <Label Text="Mode : HARD" HorizontalOptions="Center" TextColor="Red" />
        <Button Text="Aller au Parcour 1" Clicked="Parc1_clicked" BackgroundColor="LightGray" TextColor="Red" />
        <Button Text="Aller au Parcour 2" Clicked="Parc1_clicked" BackgroundColor="LightGray" TextColor="Red" />
    </StackLayout>

</ContentPage>
